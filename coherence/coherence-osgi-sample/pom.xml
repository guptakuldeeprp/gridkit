<?xml version="1.0" encoding="UTF-8"?>
<project>
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.griddynamics.research.coherence.osgi</groupId>
    <artifactId>coherence-osgi-sample</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>OSGi Bundle Base</name>
    <packaging>pom</packaging>
    <modules>
        <module>coherence-core-bundle</module>
        <module>coh-support-bundle-one</module>
        <module>coh-support-bundle-two</module>
        <module>web-bundle-one</module>
        <module>web-bundle-two</module>
        <module>service-explorer</module>
        <module>aggregator</module>
    </modules>

    <properties>
        <project.build.bundle.version>1.0</project.build.bundle.version>
        <project.build.bundle.vendor>Grid Dynamics</project.build.bundle.vendor>
        <project.build.bundle.importPackage/>
        <project.build.bundle.dynamicImportPackage/>

        <spring.maven.artifact.version>2.5.6</spring.maven.artifact.version>
        <spring.osgi.maven.artifact.version>1.2.0</spring.osgi.maven.artifact.version>

        <project.postfix1>one</project.postfix1>
        <project.postfix2>two</project.postfix2>
    </properties>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.5</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>osgi_R4_core</artifactId>
            <version>1.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>osgi_R4_compendium</artifactId>
            <version>1.0</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.oracle.coherence</groupId>
                <artifactId>coherence</artifactId>

                <version>3.5.1</version>
            </dependency>
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-core</artifactId>
                <version>${spring.maven.artifact.version}</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-context</artifactId>
                <version>${spring.maven.artifact.version}</version>
                <scope>provided</scope>
            </dependency>

            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-web</artifactId>
                <version>${spring.maven.artifact.version}</version>
                <scope>provided</scope>
            </dependency>

            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-beans</artifactId>
                <version>${spring.maven.artifact.version}</version>
                <scope>provided</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <!--<version>2.0.2</version>-->
                    <configuration>
                        <source>1.6</source>
                        <target>1.6</target>
                        <debug>true</debug>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-dependencies</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/classes/lib</outputDirectory>
                            <excludeTransitive>false</excludeTransitive>
                            <excludeScope>provided</excludeScope>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>false</overWriteSnapshots>
                            <overWriteIfNewer>true</overWriteIfNewer>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>false</addClasspath>
                        </manifest>
                        <manifestEntries>
                            <Bundle-Version>${project.build.bundle.version}</Bundle-Version>
                            <Bundle-SymbolicName>${project.build.bundle.symbolicName}</Bundle-SymbolicName>
                            <Bundle-Name>${project.build.bundle.name}</Bundle-Name>
                            <Bundle-Vendor>${project.build.bundle.vendor}</Bundle-Vendor>
                            <Export-Package>${project.build.bundle.exportPackage}</Export-Package>
                            <Import-Package>org.osgi.framework,javax.naming${project.build.bundle.importPackage}</Import-Package>
                            <!--<DynamicImport-Package>fakepackage${project.build.bundle.dynamicImportPackage}</DynamicImport-Package>-->
                            <Bundle-Activator>${project.build.bundle.activator}</Bundle-Activator>
                            <Bundle-Classpath>., lib</Bundle-Classpath>
                            <Bundle-ManifestVersion>2</Bundle-ManifestVersion>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <repositories>
    <repository>
        <id>eclipse-repository</id>
        <name>Eclipse Repository</name>
        <url>http://repo1.maven.org/eclipse/</url>
    </repository>
    <repository>
        <id>com.springsource.repository.bundles.external</id>
        <name>SpringSource Enterprise Bundle Repository - External Bundle Releases</name>
        <url>http://repository.springsource.com/maven/bundles/external</url>
    </repository>
    <repository>
        <id>com.springsource.repository.bundles.release</id>
        <name>SpringSource Enterprise Bundle Repository - SpringSource Bundle Releases</name>
        <url>http://repository.springsource.com/maven/bundles/release</url>
    </repository>
    <repository>
        <id>spring-release</id>
        <name>Spring Portfolio Release Repository</name>
        <url>http://maven.springframework.org/release</url>
    </repository>
    <repository>
        <id>spring-external</id>
        <name>Spring Portfolio External Repository</name>
        <url>http://maven.springframework.org/external</url>
    </repository>
    <repository>
        <id>spring-milestone</id>
        <name>Spring Portfolio Milestone Repository</name>
        <url>http://maven.springframework.org/milestone</url>
    </repository>
    <repository>
        <id>spring-ext</id>
        <name>Spring External Dependencies Repository</name>
        <url>
        http://springframework.svn.sourceforge.net/svnroot/springframework/repos/repo-ext/
        </url>
    </repository>
    <!-- used when building against Spring snapshots -->
    <repository>
        <id>spring-snapshot</id>
        <name>Spring Portfolio Milestone Repository</name>
        <url>http://maven.springframework.org/snapshot</url>
        <snapshots>
         <enabled>true</enabled>
        </snapshots>
    </repository>

    <repository>
        <id>i21-s3-osgi-repo</id>
        <name>i21 osgi artifacts repo</name>
        <snapshots>
         <enabled>true</enabled>
        </snapshots>
        <url>http://maven.springframework.org/osgi</url>
    </repository>
  </repositories>
</project>