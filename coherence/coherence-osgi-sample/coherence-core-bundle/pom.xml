<?xml version="1.0"?>
<project>
    <parent>
        <artifactId>coherence-osgi-sample</artifactId>
        <groupId>com.griddynamics.research.coherence.osgi</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>coherence-core-bundle</artifactId>
    <packaging>jar</packaging>
    <name>Coherence Core Bundle</name>
    <url>http://www.springframework.org/osgi</url>

    <properties>
        <project.build.bundle.name>${project.name}</project.build.bundle.name>
        <project.build.bundle.symbolicName>com.griddynamics.osgi.samples.corebundle</project.build.bundle.symbolicName>
        <project.build.bundle.importPackage>, org.springframework.context;version="${spring.maven.artifact.version}"</project.build.bundle.importPackage>
        <project.build.bundle.exportPackage>
            com.tangosol.net,
            com.tangosol.run.xml,
            com.tangosol.io.pof,
            com.griddynamics.research.coherence.osgi.corebundle,
            com.griddynamics.research.coherence.osgi.service.api,
            com.griddynamics.research.coherence.osgi.service.impl
        </project.build.bundle.exportPackage>
        <project.build.bundle.activator>com.griddynamics.research.coherence.osgi.corebundle.Activator</project.build.bundle.activator>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.oracle.coherence</groupId>
            <artifactId>coherence</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
        </dependency>

    </dependencies>
</project>