<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
       
	<bean id="distributedService" class="com.griddynamics.coherence.integration.spring.config.DistributedServiceFactory" lazy-init="true">
		<property name="serviceType" value="DistributedCache" />
	</bean>
	
	<bean id="simpleDistributedCache" class="com.griddynamics.coherence.integration.spring.config.NamedCacheFactory" lazy-init="true">
		<property name="cacheDefinition" ref="simpleDistributed" />
	</bean>
		
	<bean id="simpleDistributed" class="com.griddynamics.coherence.integration.spring.config.ServiceCacheDefinition">
		<property name="cacheService" ref="distributedService" />
		<property name="backingMapFactory" ref="rwBackingMap" />
		<property name="mapListener" ref="historyListener" />
	</bean>
	
	<bean id="cacheEvents" class="java.util.ArrayList" />
	
	<bean id="historyListener" class="com.griddynamics.coherence.integration.spring.HistoryListener" scope="prototype">
		<property name="history" ref="cacheEvents" />
	</bean>
		
	<bean id="localMap" class="com.griddynamics.coherence.integration.spring.config.LocalCacheFactory" scope="prototype">
		<property name="highUnits" value="1000" />
		<property name="evictionType" value="HYBRID" />
		<property name="expiryDelayMillis" value="30000" />
		<property name="flushDelayMillis" value="60000" />
	</bean>
	
	<bean id="cacheStore" class="com.tangosol.net.cache.MapCacheStore" scope="prototype">
		<constructor-arg>
			<bean class="java.util.HashMap">
				<constructor-arg>
					<map>
						<entry key="aaa" value="12323" />
						<entry key="bbb" value="asdsad" />
					</map>
				</constructor-arg>
			</bean>
		</constructor-arg>
	</bean>
	
	<bean id="rwBackingMap" class="com.griddynamics.coherence.integration.spring.config.ReadWriteBackingMapDefinition">
		<property name="loader" ref="cacheStore" />
		<property name="internalMap" ref="localMap" />
	</bean>
		
</beans>
