<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="cacheFactory" class="com.griddynamics.coherence.integration.spring.ContextCacheFactory">
		<property name="scopeName" value="test" />
	</bean>
	
	<bean id="simpleDistributedCache" class="com.griddynamics.coherence.integration.spring.config.NamedCacheFactory" lazy-init="true">
		<property name="cacheDefinition" ref="simpleDistributed" />
	</bean>
		
	<bean id="simpleDistributed" class="com.griddynamics.coherence.integration.spring.config.CacheDefinition" autowire="byType">
		<property name="cacheScheme" ref="simpleDistributedScheme" />
	</bean>
		
	<bean id="simpleDistributedScheme" class="com.griddynamics.coherence.integration.spring.config.DistributedScheme">
		<property name="backingMapId">
			<idref local="rwBackingMap"/>
		</property>
		<property name="listenerId">
			<idref local="printingListener"/>
		</property>
	</bean>
	
	<bean id="localMap" class="com.griddynamics.coherence.integration.spring.config.LocalCacheFactory" scope="prototype">
		<property name="highUnits" value="1000" />
		<property name="evictionType" value="HYBRID" />
		<property name="expiryDelayMillis" value="30000" />
		<property name="flushDelayMillis" value="60000" />
	</bean>
	
	<bean id="cacheStore" class="com.tangosol.net.cache.MapCacheStore" scope="prototype">
		<constructor-arg>
			<bean class="java.util.HashMap">
				<constructor-arg>
					<map>
						<entry key="aaa" value="12323" />
						<entry key="bbb" value="asdsad" />
					</map>
				</constructor-arg>
			</bean>
		</constructor-arg>
	</bean>
	
	<bean id="printingListener" class="com.griddynamics.coherence.integration.spring.PrintingListener">
	</bean>
	
	<bean id="rwBackingMap" class="com.griddynamics.coherence.integration.spring.config.ReadWriteBackingMapDefinition">
		<property name="loader" ref="cacheStore" />
		<property name="internalMap" ref="localMap" />
	</bean>
	
</beans>
